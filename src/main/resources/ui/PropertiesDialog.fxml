<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane
	fx:controller="de.urkallinger.restclient.controller.PropertiesDialogController"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111">
	<children>
		<TableView fx:id="table" editable="true" AnchorPane.bottomAnchor="85.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<columns>
				<TableColumn fx:id="colName" prefWidth="75.0" text="Name" />
				<TableColumn fx:id="colValue" prefWidth="75.0" text="Value" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
		<HBox alignment="CENTER" prefHeight="40.0"
			AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<children>
				<TextField fx:id="txtName" promptText="Name">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</TextField>
				<TextField fx:id="txtValue" promptText="Value">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</TextField>
				<Button fx:id="btnAdd" onAction="#handleAdd" mnemonicParsing="false" />
			</children>
		</HBox>
		<ButtonBar prefHeight="40.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
			<buttons>
				<Button fx:id="btnOk" onAction="#handleOk" mnemonicParsing="false" text="OK" />
			</buttons>
		</ButtonBar>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</AnchorPane>
