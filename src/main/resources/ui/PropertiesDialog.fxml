<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.urkallinger.restclient.controller.PropertiesDialogController">
	<children>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<TableView fx:id="table" editable="true" onKeyReleased="#handleTableKeyEvent"
					onMouseClicked="#handleTableMouseClick">
					<columns>
						<TableColumn fx:id="colIcon" prefWidth="24.0" />
						<TableColumn fx:id="colName" prefWidth="75.0" text="Name" />
						<TableColumn fx:id="colValue" prefWidth="75.0" text="Value" />
					</columns>
					<VBox.margin>
						<Insets bottom="10.0" />
					</VBox.margin>
				</TableView>
				<HBox alignment="CENTER">
					<children>
						<TextField fx:id="txtName" promptText="Name">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</TextField>
						<TextField fx:id="txtValue" promptText="Value">
							<HBox.margin>
								<Insets right="10.0" />
							</HBox.margin>
						</TextField>
						<Button fx:id="btnAdd" mnemonicParsing="false" />
					</children>
					<VBox.margin>
						<Insets bottom="40.0" />
					</VBox.margin>
				</HBox>
				<ButtonBar>
					<buttons>
						<Button fx:id="btnOk" onAction="#handleOk" text="OK" />
						<Button fx:id="btnCancel" onAction="#handleCancel" text="Cancel" />
					</buttons>
				</ButtonBar>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</AnchorPane>
